{% extends "base.html.twig" %}

{% block title %}
        BACK OFFICE || GESTION des COMMENTAIRES
{% endblock %}


{% block body %}

    <h1 class="display-4 text-center my-5">  BACK OFFICE || GESTION des COMMENTAIRES </h1>

        <table class="table table-bordered text-center">

            <tr>
                {% for oneColonne in colonnes %}

                    {% if oneColonne == 'createdAt'%}
                        <th> DATE </th>
                    {% elseif oneColonne == 'author' %}
                        <th> AUTHEUR </th>
                    {% elseif oneColonne == 'content' %}
                        <th> COMMENTAIRES </th>
                    {% else %}
                    <th> {{ oneColonne|upper }}</th>
                    {% endif %}
                {% endfor %}
                     <th> TITRE ARTICLE </th>
                    <th> MODIFIER</th>
                    <th> SUPP'</th>
            </tr>

            {% for oneComment in commentBdd %}
                <tr>
                    <td> {{ oneComment.id }} </td>
                    <td> {{ oneComment.author }} </td>
                    <td> {{ oneComment.content|striptags }} </td>
                    <td> {{ oneComment.createdAt|date('d/m/Y Ã  H:i:s') }} </td>
                    <td> {{ oneComment.article.title }} </td>
                  

                    <td><a href="" class="btn btn-info"><i class="fas fa-pencil-alt"></i></a></td>

                    <td><a href="{{ path('admin_remove_comment', {'id': oneComment.id}) }}" class="btn btn-danger" onclick ="return(confirm('Voulez-vous vraiment supprimer cet article ?'))"><i class="fas fa-trash-restore"></i></a></td>


                </tr>
            {% endfor %}
        </table>



{% endblock %}