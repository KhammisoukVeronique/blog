{% extends "base.html.twig" %}


{% block title %}
        Identifiez-vous
{% endblock %}

{% block body %}

        <h1 class="display-4 text-center my-5"> Identifiez-vous </h1>

        {% for message in app.flashes('success') %}
                <div class="col-md-3 bg-success po-4 rounded mx-auto text text-center text-white-3">
                        {{ message }}
                {# message est une variable de reception qui contient 1 message utilisateur par tour de boucle#}        
                <div>        

        {% endfor %}

        <form method="post" class="col-md-5 mx-auto" action="{{ path('security_login') }}">
            <div class="form-group">
                <label for="_username">E-mail</label>
                <input type="email" class="form-control" id="_username" name="_username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="_password" name="_password">
            </div>
           
            <button type="submit" class="btn btn-warning">Connexion</button>
        </form>

{% endblock %}