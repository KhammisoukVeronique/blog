{% extends "base.html.twig" %}


{% block title %}
        Identifiez-vous
{% endblock %}

{% block body %}

        <h1 class="display-4 text-center my-5"> Identifiez-vous </h1>

        {% for message in app.flashes('success') %}
                <div class="col-md-3 bg-success po-4 rounded mx-auto text text-center text-white-3">
                        {{ message }}
                {# message est une variable de reception qui contient 1 message utilisateur par tour de boucle#}        
                <div>        

        {% endfor %}

        {% if error %}
                 <div class="col-md-3 bg-success po-4 rounded mx-auto text text-center text-white-3">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        {# trans(error.messageData, 'security') : permet de pointer sur le fichier 'translation/security.en.php' qui contient la personnalisation des messages utilisateur par d√©faut de Symfony #}
                <div> 
        {% endif %}

        <form method="post" class="col-md-5 mx-auto" action="{{ path('security_login') }}">
            <div class="form-group">
                <label for="_username">E-mail</label>
                <input type="email" class="form-control" id="_username" name="_username" value="{{ lastUsername }}">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="_password" name="_password">
            </div>
           
            <button type="submit" class="btn btn-warning">Connexion</button>
        </form>

{% endblock %}